# Main App Configuration
SECRET=your_secret_key_here

# URL Prefix Configuration (optional)
# Set this to add a prefix to all URLs (e.g., "/api/v1", "/learning-map")
# Leave empty for no prefix
URL_PREFIX=

# PocketBase Configuration
# For Docker Compose: use http://pocketbase:8090
# For EKS: use your PocketBase service URL
POCKETBASE_URL=http://pocketbase:8090
POCKETBASE_EMAIL=your_pocketbase_email
POCKETBASE_PASSWORD=your_pocketbase_password

# LLM Configuration (for local testing)
API_BASE=your_api_base
API_KEY=your_api_key
MODEL=llama3.1:8b
CUSTOM_LLM_PROVIDER=your_llm_provider

# AWS Bedrock Configuration
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_DEFAULT_REGION=us-east-1

# Optional: Additional API keys
GROQ_API_KEY=your_groq_api_key

MODEL=bedrock_model_id

AGENT_RUNTIME_ARN=agentcore_container_Arn